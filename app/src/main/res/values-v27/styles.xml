<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="LightTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:textColorPrimaryInverse">@android:color/primary_text_light</item>
        <item name="android:textColorPrimary">@android:color/primary_text_light</item>
        <item name="colorAccent">@color/colorPrimary</item>
        <item name="colorPrimaryDark">#fff</item>
        <item name="colorPrimary">#fff</item>
        <item name="android:statusBarColor">#FFF</item>
        <item name="android:navigationBarColor">#fff</item>
        <item name="android:navigationBarDividerColor">#ccc</item>
        <item name="android:windowLightNavigationBar">true</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="iconColor">#202125</item>
        <item name="iconColorDisabled">#757575</item>
        <item name="tabSelected">@color/colorPrimary</item>
    </style>

    <style name="DarkTheme" parent="ThemeOverlay.MaterialComponents.Dark">
        <item name="android:textColorPrimaryInverse">@android:color/primary_text_dark</item>
        <item name="android:textColorPrimary">#bdbdbd</item>
        <item name="colorAccent">@color/colorPrimary</item>
        <item name="colorPrimaryDark">#202125</item>
        <item name="colorPrimary">#202125</item>
        <item name="android:color">@color/colorPrimary</item>
        <item name="android:statusBarColor">#202125</item>
        <item name="android:navigationBarColor">#000</item>
        <item name="android:navigationBarDividerColor">#000</item>
        <item name="android:windowLightNavigationBar">false</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:colorControlHighlight">@color/colorPrimary</item>
        <item name="colorControlActivated">@color/colorPrimary</item>
        <item name="iconColor">#bdbdbd</item>
        <item name="iconColorDisabled">#757575</item>
        <item name="tabSelected">@color/colorPrimary</item>
    </style>

    <style name="BlackTheme" parent="ThemeOverlay.MaterialComponents.Dark">
        <item name="android:textColorPrimaryInverse">@android:color/primary_text_dark</item>
        <item name="android:textColorPrimary">#bdbdbd</item>
        <item name="colorAccent">@color/colorPrimary</item>
        <item name="colorPrimaryDark">#000</item>
        <item name="colorPrimary">#000</item>
        <item name="android:color">@color/colorPrimary</item>
        <item name="android:statusBarColor">#000</item>
        <item name="android:navigationBarColor">#000</item>
        <item name="android:navigationBarDividerColor">#000</item>
        <item name="android:windowLightNavigationBar">false</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:colorControlHighlight">@color/colorPrimary</item>
        <item name="colorControlActivated">@color/colorPrimary</item>
        <item name="iconColor">#bdbdbd</item>
        <item name="iconColorDisabled">#757575</item>
        <item name="tabSelected">@color/colorPrimary</item>
    </style>

</resources>