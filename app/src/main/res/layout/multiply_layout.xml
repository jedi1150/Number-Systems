<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/explanation_multiply_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="2dp"
        android:layout_marginTop="8dp"
        android:text="@string/operand_1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/explanation_multiply_textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="index"
        android:textSize="10sp"
        app:layout_constraintStart_toEndOf="@+id/explanation_multiply_textView"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/explanation_multiply_multy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="1dp"
        android:text="*"
        app:layout_constraintStart_toEndOf="@+id/explanation_multiply_textView1"
        app:layout_constraintTop_toTopOf="@+id/explanation_multiply_textView" />

    <TextView
        android:id="@+id/explanation_multiply_textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="2dp"
        android:text="@string/operand_2"
        app:layout_constraintStart_toEndOf="@+id/explanation_multiply_multy"
        app:layout_constraintTop_toTopOf="@+id/explanation_multiply_multy" />

    <TextView
        android:id="@+id/explanation_multiply_plus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="2dp"
        android:text="+"
        app:layout_constraintStart_toEndOf="@+id/explanation_multiply_textView2"
        app:layout_constraintTop_toTopOf="@+id/explanation_multiply_textView2" />

</androidx.constraintlayout.widget.ConstraintLayout>